  "version": "0.2.0",
  "configurations": [
    {
      "request": "launch",
      "name": "Test Current File",
      "type": "node",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "test",
        "-A",
        "--watch",
        "--inspect-brk",
        "${file}"
      ],
      "attachSimplePort": 9229,
      "internalConsoleOptions": "neverOpen",
      "console": "integratedTerminal",
      "autoAttachChildProcesses": true,
      "showAsyncStacks": true,
      "sourceMaps": true
    }
  ]
}

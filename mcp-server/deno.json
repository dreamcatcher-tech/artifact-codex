{
  "tasks": {
    "watch": "deno test -A --watch",
    "test": "deno test -A --trace-leaks --parallel --clean"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/expect": "jsr:@std/expect@1.0.17",
    "hono": "jsr:@hono/hono@4.9.2",
    "@hono/mcp": "jsr:@dreamcatcher/artifact-mcp@^0.1.3",
    "@modelcontextprotocol/sdk": "npm:@modelcontextprotocol/sdk@^1.17.3",
    "ulid": "npm:ulid@3.0.1",
    "zod": "npm:zod@3.25.76"
  },
  "nodeModulesDir": "auto",
  "lint": {
    "rules": {
      "tags": [],
      "include": [
        "camelcase",
        "no-sync-fn-in-async-fn",
        "single-var-declarator",
        "verbatim-module-syntax",
        "no-console",
        "no-slow-types"
      ]
    }
  },
  "fmt": {
    "semiColons": false,
    "singleQuote": true,
    "lineWidth": 80,
    "proseWrap": "always"
  }
}

{
  "workspace": [
    "mcp-agents",
    "mcp-computers",
    "mcp-faces",
    "mcp-interactions",
    "face-cmd",
    "face-codex",
    "face-inspector",
    "face-test",
    "procman",
    "tasks",
    "shared",
    "web-server",
    "agent-basic",
    "agent-dev-suite",
    "fly-auth",
    "fly-computer",
    "fly-exec",
    "fly-nfs"
  ],
  "tasks": {
    "ok": "deno task --filter='@artifact/' ok",
    "deploy": "fly deploy -c fly.agent.toml && fly deploy -c fly.computer.toml && fly deploy -c fly.auth.toml"
  },
  "imports": {
    "@hono/clerk-auth": "jsr:@hono/clerk-auth@^3.0.3",
    "@hono/hono": "jsr:@hono/hono@^4.9.8",
    "@hono/mcp": "jsr:@dreamcatcher/artifact-mcp@^0.1.3",
    "@modelcontextprotocol/sdk": "npm:@modelcontextprotocol/sdk@^1.18.1",
    "@openjs/port-free": "jsr:@openjs/port-free@^1.0.0",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.5",
    "@std/expect": "jsr:@std/expect@^1.0.17",
    "@std/fs": "jsr:@std/fs@^1.0.19",
    "@std/path": "jsr:@std/path@^1.1.2",
    "@std/toml": "jsr:@std/toml@^1.0.10",
    "@std/ulid": "jsr:@std/ulid@^1.0.0",
    "debug": "npm:debug@^4.4.3",
    "fly-admin": "npm:fly-admin@^1.6.1",
    "serialize-error": "npm:serialize-error@^12.0.0",
    "unique-names-generator": "npm:unique-names-generator@^4.7.1",
    "ws": "npm:ws@^8.18.3",
    "zod": "npm:zod@^3.25.76"
  },
  "fmt": {
    "semiColons": false,
    "singleQuote": true,
    "lineWidth": 80,
    "exclude": [
      ".refs/"
    ]
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "exclude": [
    ".refs/"
  ],
  "nodeModulesDir": "auto"
}

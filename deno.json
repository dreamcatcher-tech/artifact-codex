{
  "workspace": [
    "agent-cmd",
    "agent-codex",
    "agent-inspector",
    "agent-test",
    "shared",
    "supervisor",
    "fly-exec",
    "fly-nfs",
    "fly-router",
    "fly-openai",
    "test"
  ],
  "tasks": {
    "inspect": "npx -y @modelcontextprotocol/inspector",
    "ok": "deno task --filter='@artifact/' ok",
    "deploy-host-basic": "flyctl deploy -c fly.host-basic.toml",
    "deploy-host-coder": "flyctl deploy -c fly.host-coder.toml",
    "deploy-exec": "flyctl deploy -c fly.exec.toml",
    "deploy-nfs": "flyctl deploy -c fly.nfs.toml",
    "deploy-openai": "flyctl deploy -c fly.openai.toml",
    "deploy-router": "flyctl deploy -c fly.router.toml",
    "base": { "dependencies": ["deploy-nfs", "deploy-openai"] },
    "compute": { "dependencies": ["deploy-exec", "deploy-router"] },
    "agents": {
      "dependencies": ["deploy-host-basic", "deploy-host-coder"]
    },
    "all": "deno task base && deno task agents && deno task compute"
  },
  "imports": {
    "@alexarena/fly-io-client": "npm:@alexarena/fly-io-client@^1.0.0",
    "@cliffy/command": "jsr:@cliffy/command@^1.0.0-rc.8",
    "@hono/clerk-auth": "jsr:@hono/clerk-auth@^3.0.3",
    "@hono/hono": "jsr:@hono/hono@^4.9.12",
    "@hono/mcp": "jsr:@dreamcatcher/artifact-mcp@^0.1.3",
    "@modelcontextprotocol/sdk": "npm:@modelcontextprotocol/sdk@^1.20.0",
    "@openjs/port-free": "jsr:@openjs/port-free@^1.0.0",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.5",
    "@std/expect": "jsr:@std/expect@^1.0.17",
    "@std/fs": "jsr:@std/fs@^1.0.19",
    "@std/path": "jsr:@std/path@^1.1.2",
    "@std/testing": "jsr:@std/testing@^1.0.16",
    "@std/toml": "jsr:@std/toml@^1.0.11",
    "@std/ulid": "jsr:@std/ulid@^1.0.0",
    "debug": "npm:debug@^4.4.3",
    "serialize-error": "npm:serialize-error@^12.0.0",
    "unique-names-generator": "npm:unique-names-generator@^4.7.1",
    "ws": "npm:ws@^8.18.3",
    "zod": "npm:zod@^3.25.76",
    "@std/http/server": "jsr:@std/http@^1.0.21/server"
  },
  "fmt": {
    "semiColons": false,
    "singleQuote": true,
    "lineWidth": 80,
    "exclude": [
      ".refs/"
    ]
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "exclude": [
    ".refs/"
  ],
  "nodeModulesDir": "auto"
}

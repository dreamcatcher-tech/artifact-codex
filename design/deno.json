{
  "tasks": {
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check:mermaid": "deno run --quiet --allow-read --no-lock scripts/mermaid-validate.ts",
    "ok": "deno fmt && deno lint && deno task check:mermaid"
  },
  "fmt": {
    "lineWidth": 100,
    "useTabs": false,
    "singleQuote": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "imports": {
    "@std/fs": "jsr:@std/fs@^1.0.19",
    "@std/path": "jsr:@std/path@^1.1.2"
  }
}

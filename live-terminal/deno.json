{
  "tasks": {
    "dev": "deno run -A --node-modules-dir npm:vite",
    "build": "./node_modules/.bin/vite build",
    "preview": "deno run -A --node-modules-dir npm:vite preview",
    "serve": "deno run --allow-net --allow-read jsr:@std/http@1/file-server dist/",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "test": "deno run -A --node-modules-dir npm:vitest",
    "test:ui": "deno run -A --node-modules-dir npm:vitest -- --ui"
  },
  "compilerOptions": {
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable",
      "deno.ns",
      "deno.unstable",
      "deno.window",
      "DOM.AsyncIterable"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "jsxImportSourceTypes": "@types/react"
  },
  "imports": {
    "@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.5",
    "@types/react": "npm:@types/react@^19.1.12",
    "@types/react-dom": "npm:@types/react-dom@^19",
    "@vitejs/plugin-react": "npm:@vitejs/plugin-react@^5.0.1",
    "react": "npm:react@^19.1.1",
    "react-dom": "npm:react-dom@^19.1.1",
    "vite": "npm:vite@^7.1.3",
    "@xterm/xterm": "npm:@xterm/xterm@^5.5.0",
    "@xterm/addon-fit": "npm:@xterm/addon-fit@^0.10",
    "vitest": "npm:vitest@3.2.4",
    "happy-dom": "npm:happy-dom@18.0.1",
    "typescript": "npm:typescript@^5.9.2"
  },
  "lint": {
    "rules": {
      "tags": [],
      "include": [
        "camelcase",
        "no-sync-fn-in-async-fn",
        "single-var-declarator",
        "verbatim-module-syntax",
        "no-console",
        "no-slow-types"
      ]
    }
  },
  "fmt": {
    "semiColons": false,
    "singleQuote": true,
    "lineWidth": 80,
    "proseWrap": "always"
  }
}

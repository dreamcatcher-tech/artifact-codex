{

  "tasks": {
    "dev": "deno run -A npm:vite",
    "build": "deno run -A npm:vite build",
    "preview": "deno run -A npm:vite preview",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "test": "deno run -A npm:vitest -- --run",
    "test:ui": "deno run -A npm:vitest -- --ui"
  },
  "lint": {
    "rules": {
      "tags": [],
      "include": [
        "camelcase",
        "no-sync-fn-in-async-fn",
        "single-var-declarator",
        "verbatim-module-syntax",
        "no-console",
        "no-slow-types"
      ]
    },
    "exclude": ["dist", "node_modules"]
  },
  "fmt": {
    "semiColons": false,
    "singleQuote": true,
    "lineWidth": 80,
    "proseWrap": "always",
    "files": { "exclude": ["dist", "node_modules"] }
  },
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "allowImportingTsExtensions": true
  },
  "imports": {
    "react": "npm:react@^19",
    "react-dom": "npm:react-dom@^19",
    "@xterm/xterm": "npm:@xterm/xterm@^5",
    "@xterm/addon-fit": "npm:@xterm/addon-fit@^0.10",
    "vite": "npm:vite@^7",
    "@vitejs/plugin-react": "npm:@vitejs/plugin-react@^5",
    "vitest": "npm:vitest",
    "happy-dom": "npm:happy-dom",
    "typescript": "npm:typescript@~5.8"
  }
}
